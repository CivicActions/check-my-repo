{
  "$schema": "https://raw.githubusercontent.com/todogroup/repolinter/master/rulesets/schema.json",
  "version": 2,
  "axioms": {},
  "rules": {
    "readme-file-exists": {
      "level": "error",
      "rule": {
        "type": "file-existence",
        "options": {
          "globsAny": ["README*"],
          "nocase": true
        }
      },
      "fix": {
        "type": "file-create",
        "options": {
          "file": "README.md",
          "replace": true,
          "text": { "url": "https://github.com/saucelabs/new-project/blob/main/README.md" }
        }
      },
      "policyInfo": "README should alway be up-to-date",
      "policyUrl": "https://opensource.saucelabs.com/docs/"
    },
    "license-file-exists": {
      "level": "error",
      "rule": {
        "type": "file-existence",
        "options": {
          "globsAny": ["LICENSE*", "COPYING*"],
          "nocase": true
        }
      },
      "fix": {
        "type": "file-create",
        "options": {
          "file": "LICENSE",
          "replace": true,
          "text": { "url": "https://github.com/saucelabs/new-project/blob/main/LICENSE" }
        }
      },
      "policyInfo": "A rpository must contain a permissive or weak copy-left license",
      "policyUrl": "https://opensource.saucelabs.com/docs/license-guide/"
    }
  }
}
